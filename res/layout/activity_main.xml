<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/modle_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_run"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:src="@drawable/run_icon" />

        <ImageView
            android:id="@+id/img_sleep"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:src="@drawable/sleep_icon" />

        <ImageView
            android:id="@+id/img_xinlv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:src="@drawable/xinlv_icon" />
    </LinearLayout>

    <com.example.shouhuantest.MultiDirectionSlidingDrawer
        xmlns:my="http://schemas.android.com/apk/res/com.example.shouhuantest"
        android:id="@+id/sliding"
        android:layout_width="match_parent"
        android:layout_height="371dp"
        my:content="@+id/blue_up"
        my:direction="topToBottom"
        my:handle="@+id/blue_dowm"
        my:topOffset="0dp" >

        <ImageView
            android:id="@+id/blue_up"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:background="@drawable/blue_up"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/blue_dowm"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@anim/blue_handle_up" />
    </com.example.shouhuantest.MultiDirectionSlidingDrawer>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/jknote" />

    <LinearLayout
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_bg"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <Button
        android:id="@+id/add"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/add" />

    <LinearLayout
        android:id="@+id/userLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/add"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
         android:gravity="right"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:layout_margin="4dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="用户1"
                android:textColor="@color/user_green"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user1" />

            <ImageView
                android:id="@+id/userchange1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/user_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="用户2"
                android:textColor="@color/user_green"
                android:textSize="20sp" />

            <ImageView
                   android:id="@+id/img_user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user2" />

            <ImageView
                android:id="@+id/userchange2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/user_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_user3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="用户3"
                android:textColor="@color/user_green"
                android:textSize="20sp" />

            <ImageView
                   android:id="@+id/img_user3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user3" />

            <ImageView
                android:id="@+id/userchange3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/user_change" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>